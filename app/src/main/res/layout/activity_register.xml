<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="@dimen/_30sdp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/logonew"/>
        <EditText
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:hint="Enter First Name"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg"
            android:drawableLeft="@mipmap/ic_action_name"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/lname"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Enter Last Name"
            android:inputType="textPersonName"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg"
            android:drawableLeft="@mipmap/ic_action_name"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Enter Phone Number"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg"
            android:drawableLeft="@drawable/phone"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Enter Email_Id"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg"
            android:drawableLeft="@mipmap/ic_action_email"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg"
            android:drawableLeft="@mipmap/ic_action_lock"
            android:padding="10dp"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="SignUp"
            android:textSize="18dp"
            android:id="@+id/register"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:background="@drawable/btn_bg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:hint="Back To Login Page"
            android:textSize="16sp"
            android:textColor="@color/blackOlive"
            android:layout_gravity="center"
            android:id="@+id/backtologin"/>
    </LinearLayout>


</ScrollView>