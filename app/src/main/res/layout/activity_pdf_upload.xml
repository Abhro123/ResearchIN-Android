<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TagsEditText="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="66dp"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="Select Paper in PDF" />


        <EditText
            android:id="@+id/editText"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="50dp"
            android:inputType="text"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/et_bg"
            android:hint="Enter Paper Name"
            android:padding="10dp"
            android:textColor="#010d01" />

        <mabbas007.tagsedittext.TagsEditText
            android:id="@+id/editText2"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg"
            android:hint="Choose Paper Category"
            android:padding="10dp"
            android:focusedByDefault="false"
            TagsEditText:allowSpaceInTag="true"
            TagsEditText:tagsBackground="@drawable/square_default"
            TagsEditText:tagsCloseImageRight="@drawable/tag_close"
            android:textColor="#010d01" />


    </RelativeLayout>

    <EditText
        android:id="@+id/shortdesc"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="60dp"
        android:background="@drawable/et_bg"
        android:layout_marginLeft="@dimen/_25sdp"
        android:hint="Abstract For PAPER"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#010d01" />

    <EditText
        android:id="@+id/longdesc"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:background="@drawable/et_bg"
        android:hint="Detailed Description For PAPER"
        android:padding="10dp"
        android:inputType="text"
        android:textColor="#010d01" />

    <mabbas007.tagsedittext.TagsEditText
        android:id="@+id/editText3"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/longdesc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_bg"
        android:hint="Co-Authors"
        android:padding="10dp"
        TagsEditText:allowSpaceInTag="true"
        TagsEditText:tagsBackground="@drawable/square_default"
        TagsEditText:tagsCloseImageRight="@drawable/tag_close"
        android:textColor="#010d01"
        android:layout_marginLeft="@dimen/_30sdp"/>

    <CheckBox
        android:id="@+id/cb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Do You Want Your Paper To Be Hidden?"
        android:textColor="#000"
        android:buttonTint="#000"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/btn_bg"
        android:text="UPLOAD PAPER"
        android:textColor="#ffffff"
        android:textSize="18dp" />


</LinearLayout>

